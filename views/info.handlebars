<header>Belize National Fire Service</header>
<div>
     <div id="employeeHeader">Employees</div>
        <div id="infoReceive">
            <ol>
                <li>Terry Cherry Captain CPR Certification</li>
                <li>Chance Williams Lietenant Certification</li>
            </ol>
        </div>
    <div id="infoBtns">
        <button class="infoBtn" uk-toggle="target: #add-employee" type="button">Add Employee</button>
        <button class="infoBtn">Update Employee</button>
        <button class="infoBtn">Delete Employee</button>
    </div>

<div id="add-employee" uk-modal>
    <div class="uk-modal-dialog">
            <div class="uk-modal-header">
                <h2 class="uk-modal-title">Enter in the Employees Information Below</h2>
            </div>
            <div class="uk-modal-body">
                <form>
                    <input id="modalLN" class="uk-input" type="text" placeholder="Last Name">
                    <input id="modalFN" class="uk-input" type="text" placeholder="First Name">
                    <input id="modalUN" class="uk-input" type="text" placeholder="Username">
                    <input id="modalEmail" class="uk-input" type="text" placeholder="Email">
                    <input id="modalRank" class="uk-input" type="text" placeholder="Rank">
                    <input id="modalSID" class="uk-input" type="text" placeholder="Station Id">
                    <input id="modalPW" class="uk-input" type="text" placeholder="Password">
                </form>
            </div>
            <div class="uk-modal-footer uk-text-right">
                <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
                <button class="uk-button uk-button-primary" type="submit">Save</button>
            </div>
    </div>
    <script src="/javascript/login.js"></script>
</div>
